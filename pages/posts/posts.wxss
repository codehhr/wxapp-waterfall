view {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.waterfall {
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
}

.waterfall view {
  width: 340rpx;
}

.post-item {
  margin: 20rpx 0;
  padding: 10rpx;
  border-radius: 14rpx;
  box-shadow: 2px 2px 10px 4px #d9d9d9;
  animation: ready 0.6s ease;
}

.post-item:active {
  box-shadow: 2px 2px 8px 6px #c9c9c9;
}

.cover {
  width: 100%;
  border-radius: 10rpx;
}

.post-item-footer {
  padding: 10rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  overflow: hidden;
}

.post-item-footer .title {
  padding-right: 20rpx;
  width: 80%;
  font-size: 0.6rem;
}

.post-item-footer .chat-icon {
  width: 20%;
}

@keyframes ready {
  from {
    transform: translateY(40rpx);
  }

  to {
    transform: translateY(0);
  }
}
